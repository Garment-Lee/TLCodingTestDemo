<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lgf.tlcodingtestdemo.ui.customview.pulltorefreshlayout.PullToRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_refresh_layout_city_guide">

        <include layout="@layout/refresh_head"></include>

        <com.lgf.tlcodingtestdemo.ui.customview.pulltorefreshlayout.PullableRecyclerView
            android:id="@+id/rv_city_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.lgf.tlcodingtestdemo.ui.customview.pulltorefreshlayout.PullableRecyclerView>

        <include layout="@layout/load_more"></include>

    </com.lgf.tlcodingtestdemo.ui.customview.pulltorefreshlayout.PullToRefreshLayout>

</RelativeLayout>
